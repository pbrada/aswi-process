<org.eclipse.epf.uma:ContentDescription xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:org.eclipse.epf.uma="http://www.eclipse.org/epf/uma/1.0.6/uma.ecore" xmlns:epf="http://www.eclipse.org/epf" epf:version="1.5.1" xmlns:rmc="http://www.ibm.com/rmc" rmc:version="7.5.1" xmi:id="_C_s4gtwuEdmRU7lXzo6lKQ" name="java_server_page_jsp_custom_tag,4.4600116920171025E-305" guid="_C_s4gtwuEdmRU7lXzo6lKQ" changeDate="2005-10-25T14:31:05.774-0700" version="7.1.0">
