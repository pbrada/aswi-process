<org.eclipse.epf.uma:ArtifactDescription xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:org.eclipse.epf.uma="http://www.eclipse.org/epf/uma/1.0.6/uma.ecore" xmlns:epf="http://www.eclipse.org/epf" epf:version="1.5.1" xmlns:rmc="http://www.ibm.com/rmc" rmc:version="7.5.1" xmi:id="_0kRXoNnmEdmO6L4XMImrsA" name="rup_business_use_case,{587A849E-B5F2-4B17-8C7F-1C59B0F5612D}" guid="_0kRXoNnmEdmO6L4XMImrsA" changeDate="2005-09-23T11:10:05.781-0700" version="7.1.0">
