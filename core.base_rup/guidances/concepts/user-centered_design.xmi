                &lt;td width=&quot;50%&quot;>&#xD;
                    &lt;p style=&quot;MARGIN-LEFT: 5.65pt; TEXT-INDENT: 0cm&quot;>&#xD;
                        &lt;span style=&quot;FONT-FAMILY: Symbol&quot;>·&lt;span&#xD;
                        style=&quot;FONT: 7pt 'Times New Roman'&quot;>&amp;nbsp;&amp;nbsp;&amp;nbsp;&lt;/span>&lt;/span> &lt;span>Develop testable&#xD;
