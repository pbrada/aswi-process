<org.eclipse.epf.uma:ContentDescription xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:org.eclipse.epf.uma="http://www.eclipse.org/epf/uma/1.0.6/uma.ecore" xmlns:epf="http://www.eclipse.org/epf" epf:version="1.5.1" xmlns:rmc="http://www.ibm.com/rmc" rmc:version="7.5.1" xmi:id="_000VENnmEdmO6L4XMImrsA" name="business_rules,8.773796964131196E-307" guid="_000VENnmEdmO6L4XMImrsA" changeDate="2005-06-22T16:11:42.147-0700" version="7.1.0">
